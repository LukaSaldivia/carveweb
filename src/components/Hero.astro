<div class="room full-width">
  <div class="floor plain full-width"></div>
  <div class="ceiling plain full-width"></div>
  <div class="wall left full-width"></div>
  <div class="wall right full-width"></div>
  <div class="wall front full-width"></div>
  <h1>Importador de zapatillas</h1>
  <h2>Desde USA hasta ARG</h2>
</div>

<style>
  .room {
    
  --_clr-room : hsl(46, 20%, 75%);
  --_clr-light : hsl(0, 0%, 93%);
  width: 100%;
  height: 500px;
  perspective: 70px;
  perspective-origin: 50% 50%; /* Establece el punto de vista */
  /* El segundo valor de perspective origin se encarga de la "altura de la camara" */
  background-color: var(--_clr-room);

  animation: view linear forwards;
  animation-timeline: scroll();
  animation-range: 0% 15%;


  position: relative;

  overflow: hidden;


  > *{
    position: absolute;
  }
}

@keyframes view {
  to{
    perspective-origin: 50% 160%;
  }
}

.plain{
  width: 100%;
  height: 100px;

  transform: translateZ(-50px) rotateX(90deg);

}



.ceiling {
  translate: 0 -50px;
  background-color: var(--_clr-room);
  box-shadow: 
              0 0 20px 5px var(--_clr-light) inset,
              0 -30px 10px var(--_clr-room) inset;
}

.floor{
  bottom: 0;
  translate: 0 50px;
  box-shadow: 
              0 0 30px #0002 inset;
  background-image: url("./images/room_textures/floor.jpg");
  background-size: 100px;
}

.wall{
  width: 100px;
  height: 500px;
  box-shadow: 
              0 0 10px #0002 inset;
  background: linear-gradient(var(--_clr-light),var(--_clr-room) 15%);
  bottom: 0;

}

.left.wall{
  left: 0;
  /* background-color: burlywood; */
  transform: translateZ(-50px) rotateY(90deg) translateZ(-50px);
}
.right.wall{
  right: 0;
  /* background-color: #444; */
  transform: translateZ(-50px) rotateY(-90deg) translateZ(-50px);
}
.front.wall{
  width: 100%;
  transform: translateZ(-100px);
}

h1{
  left: 50%;
  top: 50%;
  translate: -50% -50%;
  transform: translateZ(-110px);
  text-align: center;
  text-wrap: wrap;
  font-size: 8rem;
  min-width: 100%;
}

h2{
  left: 50%;
  top: 50%;
  translate: -50% -50%;
  text-align: center;
  text-wrap: nowrap;
  transform: translateZ(-50px) translateY(100px);
  font-size: 1rem;
}
</style>
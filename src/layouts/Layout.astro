---
const { title } = Astro.props
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'

---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="Portfolio con el fin de mostrar los trabajos de Luka Saldivia (Anner)">
  <meta name="generator" content={Astro.generator} />
  <title>{title}</title>
</head>
<body>
  <Header />
  <main class="content-grid">
    <slot />
  </main>
  <Footer />
</body>
</html>

<style is:global>

@import url('https://fonts.googleapis.com/css2?family=Archivo:ital,wght@0,100..900;1,100..900&display=swap');


:root {

--clr-txt-header: #ededed;
--clr-txt-body: #aaa;
--clr-background: #070b02;
--clr-primary: #0d4e21;
--clr-primary-light: #2f8f4c;
--clr-secondary: #1f1f41;
--clr-accent: #ffd900;

--fs-200: clamp(0.9375rem, 0.9158rem + 0.1087vw, 1rem);
--fs-300: clamp(1.125rem, 1.0815rem + 0.2174vw, 1.25rem);
--fs-400: clamp(1.35rem, 1.2048rem + 0.7261vw, 1.7675rem);
--fs-500: clamp(1.62rem, 1.3141rem + 1.5293vw, 2.4994rem);
--fs-600: clamp(1.9438rem, 1.3907rem + 2.7652vw, 3.5338rem);
--fs-700: clamp(2.3325rem, 1.4058rem + 4.6337vw, 4.9969rem);
--fs-800: clamp(2.7994rem, 1.3155rem + 7.4196vw, 7.0656rem);

--ff-header: 'Archivo',sans-serif;
--ff-base: sans-serif;
}

*,::after,::before{
  font-family: var(--ff-base);
  padding: 0;
  margin: 0;
  box-sizing: border-box;

  /* outline: 1px solid greenyellow */
}

.content-grid,
.full-width{

  
  --_padding-inline : 1rem;
  --_content-max-width : 80ch;
  --_breakout-max-width: 95ch;

  --content-size: min(100% - (var(--_padding-inline) * 2), var(--_content-max-width));
  --breakout-size: calc((var(--_breakout-max-width) - var(--_content-max-width)) / 2);
  --full-width-size : minmax(var(--_padding-inline), auto );

  display: grid;
  grid-template-columns:
  [full-width-start] 
  var(--full-width-size)
  [breakout-start] 
  minmax(0,var(--breakout-size))
  [content-start] var(--content-size) [content-end]  
  minmax(0,var(--breakout-size)) 
  [breakout-end] 
  var(--full-width-size)
  [full-width-end]
  ;
}

:is(.content-grid,.full-width) > :not(.breakout,.full-width){
  grid-column: content;
  padding-inline: var(--_padding-inline);
}


.content-grid > .breakout{
  grid-column: breakout;
}

.content-grid > .full-width{
  grid-column: full-width;
}



html {
  color-scheme: dark light;
  scroll-behavior: smooth;
}



h1,h2,h3,h4,h5,h6{
  font-family: var(--ff-header);
  color: var(--clr-txt-header);
  text-wrap: balance;
  line-height: 1.3em;
  text-transform: uppercase;
}

h1{
  font-size: var(--fs-500);
}

h2{
  font-size: var(--fs-400);
}

h3{
  font-size: var(--fs-300);
}



a{
  color: var(--clr-primary);
}

a:is(:hover,:focus){
  color: var(--clr-accent);
}

body,p,a{
  font-size: var(--fs-200);
}

::marker{
  color: var(--clr-primary);
}

body{
  color: var(--clr-txt-body);

  background-color: var(--clr-background);

  overflow-y: scroll;

  min-height: 200vh;

}

/* width */
::-webkit-scrollbar {
  width: 8px;
}

/* Track */
::-webkit-scrollbar-track {
  background: var(--clr-background);
}

/* Handle */
::-webkit-scrollbar-thumb {
  background: #222;
  border-radius: 10px;
}

/* Handle on hover */
::-webkit-scrollbar-thumb:hover {
  background: #333;
}



</style>